<div class="login-container">
  <div class="login-card">
    <div class="login-header text-center">
      <%= image_tag "logo.png", alt: "Banco MEV Logo", class: "company-logo mx-auto block mb-2" %>
      <p class="text-gray-600">Acesse sua conta</p>
    </div>

    <%= form_with url: login_path, method: :post, local: true do |f| %>

      <div class="form-group mb-4">
        <%= f.label :email, "E-mail", class: "block mb-1 font-medium" %>
        <%= f.email_field :email, placeholder: "seu@email.com", required: true, class: "input-field w-full" %>
      </div>

      <div class="form-group mb-6">
        <%= f.label :password, "Senha", class: "block mb-1 font-medium" %>
        <%= f.password_field :password, placeholder: "••••••••", required: true, class: "input-field w-full" %>
      </div>

      <div class="action-group">
        <%= f.submit "Entrar", class: "btn-primary full-width" %>
      </div>
    <% end %>
  </div>
</div>
